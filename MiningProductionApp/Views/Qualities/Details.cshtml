@model MiningProductionApp.Models.Quality

@{
    ViewData["Title"] = "Détails de l'Échantillon";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0"><i class="fas fa-eye"></i> Détails de l'Échantillon - @Model.SampleNumber</h4>
                        <div>
                            <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-warning btn-sm">
                                <i class="fas fa-edit"></i> Modifier
                            </a>
                            <a href="@Url.Action("Index")" class="btn btn-secondary btn-sm">
                                <i class="fas fa-arrow-left"></i> Retour
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6 class="card-title text-primary">
                                        <i class="fas fa-info-circle"></i> Informations Générales
                                    </h6>
                                    <dl class="row mb-0">
                                        <dt class="col-sm-5">N° Échantillon:</dt>
                                        <dd class="col-sm-7">
                                            <span class="badge bg-primary fs-6">@Model.SampleNumber</span>
                                        </dd>

                                        <dt class="col-sm-5">Date:</dt>
                                        <dd class="col-sm-7">@Model.Date.ToString("dddd, dd MMMM yyyy")</dd>

                                        <dt class="col-sm-5">Zone:</dt>
                                        <dd class="col-sm-7">
                                            <span class="badge bg-secondary">@Model.ProductionZone</span>
                                        </dd>

                                        <dt class="col-sm-5">Type de Minerai:</dt>
                                        <dd class="col-sm-7">
                                            <i class="fas fa-mountain text-secondary"></i> @Model.OreType
                                        </dd>
                                    </dl>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6 class="card-title text-success">
                                        <i class="fas fa-flask"></i> Analyses
                                    </h6>
                                    <dl class="row mb-0">
                                        <dt class="col-sm-5">Teneur:</dt>
                                        <dd class="col-sm-7">
                                            <span class="fs-4 fw-bold text-success">
                                                <i class="fas fa-percentage"></i> @Model.Grade.ToString("N1") %
                                            </span>
                                        </dd>

                                        <dt class="col-sm-5">Humidité:</dt>
                                        <dd class="col-sm-7">
                                            <span class="fs-4 fw-bold text-info">
                                                <i class="fas fa-tint"></i> @Model.Moisture.ToString("N1") %
                                            </span>
                                        </dd>
                                    </dl>
                                </div>
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Observations))
                    {
                        <div class="row mt-4">
                            <div class="col-12">
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <h6 class="card-title text-info">
                                            <i class="fas fa-comment"></i> Observations
                                        </h6>
                                        <p class="mb-0">@Model.Observations</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    <div class="row mt-4">
                        <div class="col-12">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6 class="card-title text-muted">
                                        <i class="fas fa-clock"></i> Informations Système
                                    </h6>
                                    <dl class="row mb-0">
                                        <dt class="col-sm-3">Date de création:</dt>
                                        <dd class="col-sm-9 text-muted">@Model.CreatedDate.ToString("dd/MM/yyyy HH:mm")</dd>
                                    </dl>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mt-4 d-flex justify-content-end gap-2">
                        <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Modifier cet échantillon
                        </a>
                        <a href="@Url.Action("Delete", new { id = Model.Id })" class="btn btn-outline-danger">
                            <i class="fas fa-trash"></i> Supprimer
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>