@model IEnumerable<MiningProductionApp.Models.Quality>

@{
    ViewData["Title"] = "TDB des Qualités - Tableau de Bord";
}

<div class="container-fluid">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1">TDB des Qualités</h2>
                    <p class="text-muted mb-0">Gestion de la qualité de la production minière</p>
                </div>
                <div>
                    <a href="@Url.Action("Create")" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Nouvel Échantillon
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title">Total Échantillons</h6>
                            <h3 class="mb-0">@ViewBag.TotalSamples</h3>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-flask fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title">Teneur Moyenne</h6>
                            <h3 class="mb-0">@ViewBag.AverageGrade.ToString("N1") %</h3>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-percentage fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title">Humidité Moyenne</h6>
                            <h3 class="mb-0">@ViewBag.AverageMoisture.ToString("N1") %</h3>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-tint fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Success Message -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Qualities Table -->
    <div class="card">
        <div class="card-header">
            <h5 class="card-title mb-0">Liste des Échantillons</h5>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>N° Échantillon</th>
                                <th>Date</th>
                                <th>Zone de Production</th>
                                <th>Type de Minerai</th>
                                <th>Teneur (%)</th>
                                <th>Humidité (%)</th>
                                <th>Observations</th>
                                <th width="120">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var quality in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@quality.SampleNumber</strong>
                                    </td>
                                    <td>
                                        @quality.Date.ToString("dd/MM/yyyy")
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">@quality.ProductionZone</span>
                                    </td>
                                    <td>@quality.OreType</td>
                                    <td>
                                        <strong class="text-success">@quality.Grade.ToString("N1")</strong>
                                    </td>
                                    <td>
                                        <strong class="text-info">@quality.Moisture.ToString("N1")</strong>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(quality.Observations))
                                        {
                                            <span class="text-muted">@(quality.Observations.Length > 30 ? quality.Observations.Substring(0, 30) + "..." : quality.Observations)</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a href="@Url.Action("Details", new { id = quality.Id })" class="btn btn-outline-info" title="Détails">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="@Url.Action("Edit", new { id = quality.Id })" class="btn btn-outline-warning" title="Modifier">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a href="@Url.Action("Delete", new { id = quality.Id })" class="btn btn-outline-danger" title="Supprimer">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-flask fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">Aucun échantillon enregistré</h5>
                    <p class="text-muted">Commencez par créer votre premier échantillon</p>
                    <a href="@Url.Action("Create")" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Créer un échantillon
                    </a>
                </div>
            }
        </div>
    </div>
</div>