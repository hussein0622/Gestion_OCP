@model IEnumerable<MiningProductionApp.Models.Trip>

@{
    ViewData["Title"] = "TDB des Voyages - Tableau de Bord";
}

<div class="container-fluid">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1">TDB des Voyages</h2>
                    <p class="text-muted mb-0">Gestion des voyages de production minière</p>
                </div>
                <div>
                    <a href="@Url.Action("Create")" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Nouveau Voyage
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title">Total Voyages</h6>
                            <h3 class="mb-0">@ViewBag.TotalTrips</h3>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-truck fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title">Tonnage Total</h6>
                            <h3 class="mb-0">@ViewBag.TotalTonnage.ToString("N1") T</h3>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-weight-hanging fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title">Tonnage Moyen</h6>
                            <h3 class="mb-0">@ViewBag.AverageTonnage.ToString("N1") T</h3>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-chart-line fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Success Message -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Trips Table -->
    <div class="card">
        <div class="card-header">
            <h5 class="card-title mb-0">Liste des Voyages</h5>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>N° Voyage</th>
                                <th>Date</th>
                                <th>Véhicule</th>
                                <th>Chauffeur</th>
                                <th>Zone de Production</th>
                                <th>Tonnage (T)</th>
                                <th>Observations</th>
                                <th width="120">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var trip in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@trip.TripNumber</strong>
                                    </td>
                                    <td>
                                        @trip.Date.ToString("dd/MM/yyyy")
                                    </td>
                                    <td>@trip.Vehicle</td>
                                    <td>@trip.Driver</td>
                                    <td>
                                        <span class="badge bg-secondary">@trip.ProductionZone</span>
                                    </td>
                                    <td>
                                        <strong class="text-success">@trip.Tonnage.ToString("N1")</strong>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(trip.Observations))
                                        {
                                            <span class="text-muted">@(trip.Observations.Length > 30 ? trip.Observations.Substring(0, 30) + "..." : trip.Observations)</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a href="@Url.Action("Details", new { id = trip.Id })" class="btn btn-outline-info" title="Détails">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="@Url.Action("Edit", new { id = trip.Id })" class="btn btn-outline-warning" title="Modifier">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a href="@Url.Action("Delete", new { id = trip.Id })" class="btn btn-outline-danger" title="Supprimer">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-truck fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">Aucun voyage enregistré</h5>
                    <p class="text-muted">Commencez par créer votre premier voyage</p>
                    <a href="@Url.Action("Create")" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Créer un voyage
                    </a>
                </div>
            }
        </div>
    </div>
</div>