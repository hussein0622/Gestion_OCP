@model MiningProductionApp.Models.Driver

@{
    ViewData["Title"] = "Supprimer Conducteur";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0"><i class="fas fa-trash"></i> Supprimer Conducteur</h4>
                        <a href="@Url.Action("Index")" class="btn btn-light">
                            <i class="fas fa-arrow-left"></i> Retour
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <h5 class="alert-heading">
                            <i class="fas fa-exclamation-triangle"></i> Attention !
                        </h5>
                        <p class="mb-0">Êtes-vous sûr de vouloir supprimer ce conducteur ? Cette action est irréversible.</p>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6 class="card-title text-primary">
                                        <i class="fas fa-info-circle"></i> Informations Générales
                                    </h6>
                                    <dl class="row mb-0">
                                        <dt class="col-sm-5">Code:</dt>
                                        <dd class="col-sm-7">
                                            <span class="badge bg-primary fs-6">@Model.DriverCode</span>
                                        </dd>

                                        <dt class="col-sm-5">Nom:</dt>
                                        <dd class="col-sm-7">
                                            <i class="fas fa-user text-secondary"></i> @Model.DriverName
                                        </dd>

                                        <dt class="col-sm-5">Téléphone:</dt>
                                        <dd class="col-sm-7">@Model.PhoneNumber</dd>

                                        <dt class="col-sm-5">Licence:</dt>
                                        <dd class="col-sm-7">@Model.LicenseNumber</dd>
                                    </dl>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6 class="card-title text-info">
                                        <i class="fas fa-calendar"></i> Informations Supplémentaires
                                    </h6>
                                    <dl class="row mb-0">
                                        <dt class="col-sm-6">Adresse:</dt>
                                        <dd class="col-sm-6">@Model.Address</dd>

                                        <dt class="col-sm-6">Date Embauche:</dt>
                                        <dd class="col-sm-6">@(Model.HireDate?.ToString("dd/MM/yyyy") ?? "-")</dd>

                                        <dt class="col-sm-6">Statut:</dt>
                                        <dd class="col-sm-6">
                                            @if (Model.Status == "Actif")
                                            {
                                                <span class="badge bg-success">@Model.Status</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">@Model.Status</span>
                                            }
                                        </dd>

                                        <dt class="col-sm-6">Date Création:</dt>
                                        <dd class="col-sm-6">@Model.CreatedDate.ToString("dd/MM/yyyy HH:mm")</dd>
                                    </dl>
                                </div>
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Observations))
                    {
                        <div class="row mt-4">
                            <div class="col-12">
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <h6 class="card-title text-info">
                                            <i class="fas fa-comment"></i> Observations
                                        </h6>
                                        <p class="mb-0">@Model.Observations</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    <form asp-action="DeleteDriver" method="post" class="mt-4">
                        <div class="d-flex justify-content-end gap-2">
                            <a href="@Url.Action("Index")" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Annuler
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Confirmer la Suppression
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 