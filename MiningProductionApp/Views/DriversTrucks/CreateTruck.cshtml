@model MiningProductionApp.Models.Truck

@{
    ViewData["Title"] = "Nouveau Camion";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0"><i class="fas fa-plus"></i> Nouveau Camion</h4>
                        <a href="@Url.Action("Index")" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Retour
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <form asp-action="CreateTruck" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="TruckCode" class="form-label"></label>
                                    <input asp-for="TruckCode" class="form-control" readonly />
                                    <span asp-validation-for="TruckCode" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="TruckName" class="form-label"></label>
                                    <input asp-for="TruckName" class="form-control" placeholder="Ex: Camion-001" />
                                    <span asp-validation-for="TruckName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Brand" class="form-label"></label>
                                    <input asp-for="Brand" class="form-control" placeholder="Ex: Volvo" />
                                    <span asp-validation-for="Brand" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Model" class="form-label"></label>
                                    <input asp-for="Model" class="form-control" placeholder="Ex: FH16" />
                                    <span asp-validation-for="Model" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="RegistrationNumber" class="form-label"></label>
                                    <input asp-for="RegistrationNumber" class="form-control" placeholder="Ex: 12345-A-6" />
                                    <span asp-validation-for="RegistrationNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Capacity" class="form-label"></label>
                                    <div class="input-group">
                                        <input asp-for="Capacity" class="form-control" step="0.1" min="0" />
                                        <span class="input-group-text">T</span>
                                    </div>
                                    <span asp-validation-for="Capacity" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="ManufacturingYear" class="form-label"></label>
                                    <input asp-for="ManufacturingYear" class="form-control" type="number" min="1900" max="@DateTime.Now.Year" />
                                    <span asp-validation-for="ManufacturingYear" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="AcquisitionDate" class="form-label"></label>
                                    <input asp-for="AcquisitionDate" type="date" class="form-control" />
                                    <span asp-validation-for="AcquisitionDate" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Status" class="form-label"></label>
                            <select asp-for="Status" class="form-select">
                                <option value="Opérationnel">Opérationnel</option>
                                <option value="Maintenance">Maintenance</option>
                                <option value="Hors service">Hors service</option>
                                <option value="En réparation">En réparation</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Observations" class="form-label"></label>
                            <textarea asp-for="Observations" class="form-control" rows="3" placeholder="Observations optionnelles..."></textarea>
                            <span asp-validation-for="Observations" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <a href="@Url.Action("Index")" class="btn btn-secondary">Annuler</a>
                            <button type="submit" class="btn btn-info">
                                <i class="fas fa-save"></i> Créer le Camion
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
} 