@model MiningProductionApp.ViewModels.CombinedPerformanceViewModel

@{
    ViewData["Title"] = "TDB de Performance";
}

<div class="container-fluid">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1">TDB de Performance</h2>
                    <p class="text-muted mb-0">Suivi des performances des conducteurs et des camions</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Driver Performance Section -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">
                    <i class="fas fa-user"></i> Performance des Conducteurs
                </h5>
                <a href="@Url.Action("CreateDriver")" class="btn btn-primary btn-sm">
                    <i class="fas fa-plus"></i> Nouvelle Performance
                </a>
            </div>
        </div>
        <div class="card-body">
            <!-- Driver Statistics Cards -->
            <div class="row mb-4">
                <div class="col-md-3">
                    <div class="card bg-info text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h6 class="card-title">Total Conducteurs</h6>
                                    <h3 class="mb-0">@ViewBag.TotalDrivers</h3>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-users fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-success text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h6 class="card-title">Total Voyages</h6>
                                    <h3 class="mb-0">@ViewBag.TotalDriverTrips.ToString("N0")</h3>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-route fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-warning text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h6 class="card-title">Tonnage Moyen</h6>
                                    <h3 class="mb-0">@ViewBag.AverageDriverTonnage.ToString("N1") T</h3>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-weight-hanging fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-primary text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h6 class="card-title">Score Sécurité Moyen</h6>
                                    <h3 class="mb-0">@ViewBag.AverageSafetyScore.ToString("N1") %</h3>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-shield-alt fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Driver Performance Table -->
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-primary">
                        <tr>
                            <th>Code</th>
                            <th>Date</th>
                            <th>Chauffeur</th>
                            <th>Voyages</th>
                            <th>Tonnage (T)</th>
                            <th>Heures</th>
                            <th>Carburant (L)</th>
                            <th>Score (%)</th>
                            <th>Observations</th>
                            <th width="100">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var performance in Model.DriverPerformances)
                        {
                            <tr>
                                <td><strong>@performance.PerformanceCode</strong></td>
                                <td>@performance.Date.ToString("dd/MM/yyyy")</td>
                                <td>@performance.Driver</td>
                                <td>@performance.TotalTrips.ToString("N0")</td>
                                <td>@performance.TotalTonnage.ToString("N1")</td>
                                <td>@performance.WorkingHours.ToString("N1")</td>
                                <td>@performance.FuelConsumption.ToString("N1")</td>
                                <td>
                                    <span class="badge bg-success">@performance.SafetyScore.ToString("N1") %</span>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(performance.Observations))
                                    {
                                        <span class="text-muted">@(performance.Observations.Length > 30 ? performance.Observations.Substring(0, 30) + "..." : performance.Observations)</span>
                                    }
                                </td>
                                <td>
                                    <a href="@Url.Action("DriverDetails", new { id = performance.Id })" class="btn btn-outline-primary btn-sm">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Truck Performance Section -->
    <div class="card">
        <div class="card-header bg-success text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">
                    <i class="fas fa-truck"></i> Performance des Camions
                </h5>
                <a href="@Url.Action("CreateTruck")" class="btn btn-success btn-sm">
                    <i class="fas fa-plus"></i> Nouvelle Performance
                </a>
            </div>
        </div>
        <div class="card-body">
            <!-- Truck Statistics Cards -->
            <div class="row mb-4">
                <div class="col-md-3">
                    <div class="card bg-info text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h6 class="card-title">Total Camions</h6>
                                    <h3 class="mb-0">@ViewBag.TotalTrucks</h3>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-truck fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-success text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h6 class="card-title">Total Voyages</h6>
                                    <h3 class="mb-0">@ViewBag.TotalTruckTrips.ToString("N0")</h3>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-route fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-warning text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h6 class="card-title">Tonnage Moyen</h6>
                                    <h3 class="mb-0">@ViewBag.AverageTruckTonnage.ToString("N1") T</h3>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-weight-hanging fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-primary text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h6 class="card-title">Disponibilité Moyenne</h6>
                                    <h3 class="mb-0">@ViewBag.AverageAvailability.ToString("N1") %</h3>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-chart-line fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Truck Performance Table -->
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-success">
                        <tr>
                            <th>Code</th>
                            <th>Date</th>
                            <th>Véhicule</th>
                            <th>Voyages</th>
                            <th>Tonnage (T)</th>
                            <th>Op. (h)</th>
                            <th>Maint. (h)</th>
                            <th>Carburant (L)</th>
                            <th>Dispo. (%)</th>
                            <th>Observations</th>
                            <th width="100">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var performance in Model.TruckPerformances)
                        {
                            <tr>
                                <td><strong>@performance.PerformanceCode</strong></td>
                                <td>@performance.Date.ToString("dd/MM/yyyy")</td>
                                <td>@performance.Vehicle</td>
                                <td>@performance.TotalTrips.ToString("N0")</td>
                                <td>@performance.TotalTonnage.ToString("N1")</td>
                                <td>@performance.OperatingHours.ToString("N1")</td>
                                <td>@performance.MaintenanceHours.ToString("N1")</td>
                                <td>@performance.FuelConsumption.ToString("N1")</td>
                                <td>
                                    <span class="badge bg-success">@performance.Availability.ToString("N1") %</span>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(performance.Observations))
                                    {
                                        <span class="text-muted">@(performance.Observations.Length > 30 ? performance.Observations.Substring(0, 30) + "..." : performance.Observations)</span>
                                    }
                                </td>
                                <td>
                                    <a href="@Url.Action("TruckDetails", new { id = performance.Id })" class="btn btn-outline-success btn-sm">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>