@model MiningProductionApp.Models.DriverPerformance

@{
    ViewData["Title"] = "Nouvelle Performance Conducteur";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0"><i class="fas fa-plus"></i> Nouvelle Performance Conducteur</h4>
                        <a href="@Url.Action("Index")" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Retour
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <form asp-action="CreateDriver" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="PerformanceCode" class="form-label"></label>
                                    <input asp-for="PerformanceCode" class="form-control" readonly />
                                    <span asp-validation-for="PerformanceCode" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Date" class="form-label"></label>
                                    <input asp-for="Date" type="date" class="form-control" />
                                    <span asp-validation-for="Date" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Driver" class="form-label"></label>
                            <input asp-for="Driver" class="form-control" placeholder="Ex: Mohamed Alami" />
                            <span asp-validation-for="Driver" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="TotalTrips" class="form-label"></label>
                                    <input asp-for="TotalTrips" class="form-control" type="number" step="1" min="0" />
                                    <span asp-validation-for="TotalTrips" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="TotalTonnage" class="form-label"></label>
                                    <div class="input-group">
                                        <input asp-for="TotalTonnage" class="form-control" step="0.1" min="0" />
                                        <span class="input-group-text">T</span>
                                    </div>
                                    <span asp-validation-for="TotalTonnage" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="WorkingHours" class="form-label"></label>
                                    <div class="input-group">
                                        <input asp-for="WorkingHours" class="form-control" step="0.1" min="0" />
                                        <span class="input-group-text">h</span>
                                    </div>
                                    <span asp-validation-for="WorkingHours" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="FuelConsumption" class="form-label"></label>
                                    <div class="input-group">
                                        <input asp-for="FuelConsumption" class="form-control" step="0.1" min="0" />
                                        <span class="input-group-text">L</span>
                                    </div>
                                    <span asp-validation-for="FuelConsumption" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="SafetyScore" class="form-label"></label>
                                    <div class="input-group">
                                        <input asp-for="SafetyScore" class="form-control" step="0.1" min="0" max="100" />
                                        <span class="input-group-text">%</span>
                                    </div>
                                    <span asp-validation-for="SafetyScore" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Observations" class="form-label"></label>
                            <textarea asp-for="Observations" class="form-control" rows="3" placeholder="Observations optionnelles..."></textarea>
                            <span asp-validation-for="Observations" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <a href="@Url.Action("Index")" class="btn btn-secondary">Annuler</a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Cr√©er la Performance
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}